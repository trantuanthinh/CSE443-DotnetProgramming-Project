<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Project</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/tailwindcss@3.4.17/dist/tailwind.min.css"
        asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/output.css" asp-append-version="true" />
</head>

<body>
    <header>
        <nav class="bg-white shadow mb-3">
            <div class="container mx-auto px-4">
                <div class="flex justify-between items-center">
                    <a class="text-xl font-bold" asp-controller="Home" asp-action="Index">Project</a>
                    <div class="flex space-x-4">
                        <a class="text-gray-700" asp-controller="Home" asp-action="Index">Home</a>
                        <a class="text-gray-700" asp-controller="Home" asp-action="Privacy">Privacy</a>

                        @if (ViewBag.User == null)
                        {

                            <a class="text-gray-700" asp-controller="Auth" asp-action="SignIn">Sign In</a>
                            <a class="text-gray-700" asp-controller="Auth" asp-action="SignUp">Sign Up</a>
                        }
                        else
                        {
                            <span class="text-gray-700">Welcome, @ViewBag.User.Name!</span>
                            <form class="inline-block" asp-controller="Home" asp-action="Logout" method="post">
                                <button type="submit" class="text-gray-700">Logout</button>
                            </form>
                        }

                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container mx-auto px-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-t py-4 text-center text-gray-600">
        <div class="container mx-auto">
            &copy; 2025 - Project - <a asp-controller="Home" asp-action="Privacy" class="text-blue-500">Privacy</a>
        </div>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
