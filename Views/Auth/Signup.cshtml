            <div class="mt-6">
                <form asp-controller="Auth" asp-action="ContinueWithGoogle" method="post" id="googleForm">
                    @Html.AntiForgeryToken()
                    <div>
                        <button type="submit"
                            class="w-full flex items-center justify-center py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-500 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
