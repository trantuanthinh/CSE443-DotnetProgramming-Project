            </div>
        </form>

        <div class="mt-6">
            <div class="relative">
                <div class="absolute inset-0 flex items-center">
                    <div class="w-full border-t border-gray-300"></div>
                </div>
                <div class="relative flex justify-center text-sm">
                    <span class="px-2 bg-white text-gray-500">
                        Or continue with
                    </span>
                </div>
            </div>

            <div class="mt-6">
                <form asp-controller="Auth" asp-action="ContinueWithGoogle" method="post" id="googleForm">
                    @Html.AntiForgeryToken()
                    <div>
                        <button type="submit"
                                class="w-full flex items-center justify-center py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-500 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                            <i class="fa-brands fa-google mr-2 text-gray-500"></i> Continue with Google
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>



<script>
    document.getElementById('googleForm').addEventListener('submit', function (e) {
        e.preventDefault();

        const form = e.target;
        const formData = new FormData(form);

        fetch(form.action, {
            method: 'POST',
            body: formData,
            headers: {
                'RequestVerificationToken': form.querySelector('input[name="__RequestVerificationToken"]').value
            }
        })
            .then(response => response.json())
            .then(data => {
                if (data.redirectUrl) {
                    const width = 600;
                    const height = 700;
                    const left = (window.innerWidth - width) / 2 + window.screenX;
                    const top = (window.innerHeight - height) / 2 + window.screenY;

                    window.open(
                        data.redirectUrl,
                        '_blank',
                        `width=${ width },height=${ height },top=${ top },left=${ left },resizable,scrollbars`
                    );
                } else {
                    alert("Failed to get redirect URL.");
                }
            })
            .catch(error => console.error('Error:', error));
    });
</script>
