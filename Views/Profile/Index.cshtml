@model Project.Models.User
@using Project.Utils;
@using System.Security.Claims;

@{
    ViewData["Title"] = "Profile";
    var currentUser = ViewData["CurrentUser"] as Project.Models.User;
    var items = ViewData["Items"] as IEnumerable<Project.Models.Item>;
    var users = ViewData["Users"] as ICollection<Project.Models.User>;
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

<div class="flex flex-col md:flex-row min-h-screen w-full" x-data="{ tab: 'profile' }">
    <!-- Sidebar / Tabs -->
    <div class="w-full md:w-1/4 bg-gray-100 border-r border-gray-200 p-6 flex flex-col">
        <ul class="space-y-2">
            <li>
                <a href="#" @@click="tab = 'profile'"
                class="w-full border border-black font-medium py-3 px-4 rounded-md transition duration-150 ease-in-out focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-1 hover:bg-gray-200 mb-2"
                :class="{ 'bg-black text-white hover:bg-gray-900': tab === 'profile', 'bg-white text-gray-800': tab !== 'profile' }">
                    <i class="bi bi-person-fill mr-2"></i>
                    <span>Profile</span>
                </a>
            </li>

            @if (User.HasClaim(ClaimTypes.Role, UserType.Manager.ToString()))
            {
                <li>
                    <a href="#" @@click="tab = 'users'"
                       class="w-full border border-black font-medium py-3 px-4 rounded-md transition duration-150 ease-in-out focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-1 hover:bg-gray-200"
                       :class="{ 'bg-black text-white hover:bg-gray-900': tab === 'users', 'bg-white text-gray-800': tab !== 'users' }">
                        <i class="bi bi-people-fill mr-2"></i>
                        <span>Manager User List</span>
                    </a>
                </li>
                <li>
                    <a href="#" @@click="tab = 'items'"
                       class="w-full border border-black font-medium py-3 px-4 rounded-md transition duration-150 ease-in-out focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-1 hover:bg-gray-200"
                       :class="{ 'bg-black text-white hover:bg-gray-900': tab === 'items', 'bg-white text-gray-800': tab !== 'items' }">
                        <i class="bi bi-box-seam mr-2"></i>
                        <span>Inventory</span>
                    </a>
                </li>
            }
        </ul>
    </div>

    <!-- Main Content -->
    <div class="flex-grow bg-gray-100 py-10 px-6 w-full">
        <!-- Profile Tab -->
        <div x-show="tab === 'profile'" x-cloak class="flex flex-col items-center">
            <partial name="_Profile" model="currentUser" />
        </div>

        @if (User.HasClaim(ClaimTypes.Role, UserType.Manager.ToString()))
        {
            <!-- Items Tab -->
            <div x-show="tab === 'items'" x-cloak class="flex flex-col items-center">
                <partial name="_Items" model="items" />
            </div>
            <!-- User List Tab -->
            <div x-show="tab === 'users'" x-cloak class="flex flex-col items-center">
                <partial name="_UserList" model="users" />
            </div>
        }
    </div>
</div>
