@model Project.Models.User

@{
    ViewData["Title"] = "Profile";
}

<div class="flex flex-col md:flex-row min-h-screen w-full" x-data="{ tab: 'profile' }">
    <!-- Sidebar / Tabs -->
    <div class="w-full md:w-1/4 bg-white border-r p-4">
        <button @@click="tab = 'profile'"
            class="w-full bg-gray-200 hover:bg-gray-300 text-gray-800 font-semibold py-2 px-4 mb-2 rounded"
            :class="{ 'bg-blue-500 text-white': tab === 'profile' }">
            Profile
        </button>
        <button @@click="tab = 'items'"
            class="w-full bg-gray-200 hover:bg-gray-300 text-gray-800 font-semibold py-2 px-4 rounded"
            :class="{ 'bg-blue-500 text-white': tab === 'items' }">
            Items
        </button>
    </div>

    <!-- Main Content -->
    <div class="flex-grow bg-gray-100 py-10 px-6 w-full">
        <!-- Profile Tab -->
        <div x-show="tab === 'profile'" x-cloak class="flex flex-col items-center">
            @Html.Partial("_Profile", @Model)
        </div>

        <!-- Items Tab -->
        <div x-show="tab === 'items'" x-cloak class="flex flex-col items-center">
            @Html.Partial("_Items", ViewData["Items"] as List<Project.Models.Item>)
        </div>
    </div>
</div>
