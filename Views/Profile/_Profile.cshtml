@model Project.Models.User

<!-- Profile Tab -->
<h1 class="text-3xl font-bold mb-6">Profile</h1>
<div class="bg-white p-6 rounded-md shadow border w-full max-w-md">
    <h2 class="text-xl font-semibold text-center mb-2">@Model.Name</h2>
    <p class="text-gray-600 text-center">Email: <span class="font-medium">@Model.Email</span></p>
    <p class="text-gray-600 text-center mb-4">Role: <span class="font-medium">@Model.Role</span></p>
    <div class="flex justify-center">
        <!--         <button type="button" onclick="toggleModal(true)" -->
        <!--             class="bg-black text-white px-4 py-2 rounded hover:bg-gray-600 transition"> -->
        <!--             Edit Profile -->
        <!--         </button> -->
        <button class="bg-black text-white px-4 py-2 rounded hover:bg-gray-800" onclick="toggleModal(true)">
            Edit Profile
        </button>
    </div>
</div>

<!-- Modal -->
<div id="editModal" class="fixed inset-0 bg-black bg-opacity-40 hidden z-50">
    <div class="flex items-center justify-center min-h-screen px-4">
        <div class="bg-white p-6 rounded shadow-md w-full max-w-lg relative">
            <h2 class="text-xl font-bold mb-4 text-center">Edit Profile</h2>
            <form asp-controller="User" asp-action="UpdateProfile" method="post" class="space-y-4">
                @Html.AntiForgeryToken()
                <input type="hidden" name="Id" value="@Model.Id" />

                <div>
                    <label class="block text-sm font-medium mb-1">Name</label>
                    <input type="text" name="Name" value="@Model.Name"
                        class="w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring focus:ring-blue-300"
                        required />
                </div>
                <div>
                    <label class="block text-sm font-medium mb-1">Username</label>
                    <input type="text" name="Username" value="@Model.Username"
                        class="w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring focus:ring-blue-300"
                        required />
                </div>
                <div>
                    <label class="block text-sm font-medium mb-1">Password</label>
                    <input type="password" name="Password"
                        class="w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring focus:ring-blue-300" />
                </div>
                <div>
                    <label class="block text-sm font-medium mb-1">Phone Number</label>
                    <input type="text" name="PhoneNumber" value="@Model.PhoneNumber"
                        class="w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring focus:ring-blue-300" />
                </div>

                <div class="flex justify-end gap-2 pt-2">
                    <button type="button" onclick="toggleModal(false)"
                        class="px-4 py-2 bg-gray-300 text-gray-800 rounded hover:bg-gray-400">
                        Cancel
                    </button>
                    <button type="submit" class="px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600">
                        Save
                    </button>
                </div>
            </form>
            <button onclick="toggleModal(false)"
                class="absolute top-2 right-3 text-2xl font-bold text-gray-500 hover:text-gray-700">
                &times;
            </button>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function toggleModal(show) {
            const modal = document.getElementById('editModal');
            if (show) {
                modal.classList.remove('hidden');
            } else {
                modal.classList.add('hidden');
            }
        }
    </script>
}
